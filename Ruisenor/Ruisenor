CLEAROUTPUT

newcmd jugarBJ res
	copy 42#1 58#0 bolsa
	sample 1 bolsa res
end

newcmd llamarMetodo 
	jugarBJ partida
	
	if partida=1
		print "ganacion"
	else
		print "perdicion"
	end
end

newcmd EstrategiaClasica dineroInicio apuestaInicial gananciaDeseada respuesta
	dineroAcumulado = dineroInicio
	
	while (dineroAcumulado > 0 AND dineroAcumulado < gananciaDeseada)
		jugarBJ partida
		if partida=1
			dineroAcumulado = dineroAcumulado + apuestaInicial
		else
			dineroAcumulado = dineroAcumulado - apuestaInicial
		end
	end

	if(dineroAcumulado <= 0)
		respuesta = 0
	else
		respuesta = 1
	end
end

newcmd EstrategiaNightingale dineroInicio apuestaInicial gananciaDeseada respuesta
	dineroAcumulado = dineroInicio
	apuestaEstrategica = apuestaInicial

	while (dineroAcumulado > 0 AND dineroAcumulado < gananciaDeseada)
		jugarBJ partida
		if partida=1 AND dineroAcumulado >= apuestaEstrategica
			dineroAcumulado = dineroAcumulado + apuestaEstrategica
			apuestaEstrategica = apuestaInicial
		elseif partida=1 AND dineroAcumulado < apuestaEstrategica
			dineroAcumulado = dineroAcumulado + dineroAcumulado
			apuestaEstrategica = apuestaInicial
		elseif partida=0 AND dineroAcumulado >= apuestaEstrategica
			dineroAcumulado = dineroAcumulado - apuestaEstrategica
			apuestaEstrategica = apuestaEstrategica * 2
		else
			dineroAcumulado = 0
		end

		print ""
		print "Prueba:"
		print partida
		print dineroAcumulado
		print apuestaEstrategica

	end
	
	if(dineroAcumulado <= 0)
		respuesta = 0
	else 
		respuesta = 1
	end
end 


EstrategiaNightingale 2000 100 2500 res
print ""
print res


